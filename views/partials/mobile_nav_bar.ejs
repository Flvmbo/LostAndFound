<style>
    
:root
{
    --primary-color:#592C54;
    --secondary-color:#964B8E;
    scroll-behavior: smooth;
}


.mobile-menu-container
{
    display: none;
    /* display: flex; */
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0px;
    right:0px;
    width: 100%;
    height: 100%;

    transition: all 0.2s ease-out;
    /* background-color: gray; */
}

.mobile-opened
{
    display: flex;
}

.hamburger_close_div{
    display: none;
    position: fixed;
    cursor: pointer;
    margin : 15px;
    margin-right : 35px;
    right : 0px;
}

.mobile-left
{
    width: 49.8%;
    height: 100%;
    left: 0px;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    background-color: honeydew;
    padding: 7vh;
    padding-top: 20vh;
    animation: enterMobile 0.35s ease-in forwards;
    transform: translateX(-50vw);
    transition: all 1s ease;
}




.close{
    font-size: 60px;
}

.dividing-line
{
    position: absolute;
    top: 15%;
    left: 50%;
    height: 31rem;
    vertical-align: center;
    width: 0.4%;
    border:1px solid var(--primary-color);
    animation:showLine 1s 0.1s ease forwards;
    transform-origin: center;
    z-index: 10000;
    transform: scale(0);
    transition : all 1s 0.1s ease-in;
    background-color:#592C54;
}

@keyframes showLine {
    to{
        opacity: 1;
        transform: scale(1);
    }
}

.mobile-right
{
    width: 49.8%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background-color: honeydew;
    padding: 7vh;
    /* border-left: 1; */
    padding-top: 30vh;
    animation: enterMobile 0.35s ease-in forwards;
    transform: translateX(50vw);
    transition : all 1s 0.1s ease-in
}

@keyframes enterMobile {
    to{
        opacity: 1;
        transform: translateX(0);
    }
}

.mobile-menu-container p 
{
    font-size: 1.6rem;
    margin-bottom: 10rem;
    opacity: 0;
}

.mh{
    transform: translateX(17rem);
    animation:mobile-trans 1s  ease forwards;
    animation-delay: 0s;
}

.ma{
    
    transform: translateX(-17rem);
    animation:mobile-trans 1s  ease forwards;
    animation-delay: 0.2s;
}
.ms{
    transform: translateX(17rem);
    animation:mobile-trans 1s  ease forwards;
    animation-delay: 0.4s;
}

.mr{
    transform: translateX(-17rem);
    animation:mobile-trans 1s  ease forwards;
    animation-delay: 0.6s;
}

@keyframes mobile-trans {
    42%{
        opacity: 0;
    }

    100%
    {
        transform: translate(0);
        opacity: 1;
    }
}

.mobile-menu-container p a
{
    text-decoration: none;
    color: var(--primary-color);
}

@media (max-width : 500px) {
    .mobile-menu-container p{
        font-size: 1.3rem;
        margin-bottom: 7rem;
    }

    .dividing-line{
        height: 25rem;
        top: 18%;
    }

    .mobile-left{
        padding-top: 25vh;
    }

    .mobile-right{
        padding-top: 35vh;
    }
}


@media (max-width : 400px) {
    .mobile-menu-container p{
        font-size: 1.1rem;
        margin-bottom: 6rem;
    }

    .dividing-line{
        height: 22rem;
        top: 22%;
    }

    .mobile-left{
        padding-top: 27vh;
    }

    .mobile-right{
        padding-top: 37vh;
    }
}

</style>
<body>
    

<div class="mobile-menu-container">
        <div class="mobile-left" id="mobileLeft">
            <p class = "mh"><a href="">Home</a></p>
            <p class = "ms"><a href="">Submit-Item</a></p>
            <p class = "mr"><a href="">How to use</a></p>
        </div>
        <div class="dividing-line" id="dividingline"></div>
        <div class="mobile-right" id="mobileRight">
            <p class = "ma" ><a href="">About Us</a></p>
            <p class = "mr"><a href="">Retrieve Item</a></p>
        </div>

        <div class="hamburger_close_div" id="hamburgerCloseDiv">
            <label class="close" id="close">&times;</label>
        </div>
</div>
</body>

<script>
        
    const hamburger = document.querySelector('.hamburger')
    const mobileMenu = document.querySelector('.mobile-menu-container')

    //
    const dividingLine =  document.getElementById('dividingline')
    const mobileLeft =  document.getElementById('mobileLeft')
    const mobileRight =  document.getElementById('mobileRight')

    const hamburgerCloseDiv = document.getElementById("hamburgerCloseDiv")
    const closee = document.getElementById("close")

   /* document.body.onresize = ()=>{
        // alert()
        if(document.body.clientWidth> 850 && window.getComputedStyle(document.querySelector(".nav-container"), null).display == "flex"){
            closee.click()
        }
    } */

    hamburger.addEventListener('click',function(e)
    {
        hamburgerCloseDiv.style.display = "block"
        mobileMenu.classList.add('mobile-opened')
        hamburger.style.display ="none"
        if(document.body.style.overflow == 'hidden')
        {   document.body.style.overflow = 'auto' }
        else
        {
            document.body.style.overflow = 'hidden'
        }
    })


    closee.addEventListener("click",()=>{
        hamburgerCloseDiv.style.display = "none"
        mobileMenu.classList.remove('mobile-opened')
        hamburger.style.display ="flex"
        if(document.body.style.overflow == 'hidden')
        {   document.body.style.overflow = 'auto' }
        else
        {
            document.body.style.overflow = 'hidden'
        }
})
</script>

