<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="unsubscribe_from_mail_files/styles.css">
     <style>
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400&display=swap');
    </style>
</head>
<body class="body">
    <div class="full-page">
        <div class="full_page">
            <%- include("./partials/nav_bar.ejs") %> 
            <div class="main">
                <div class="main-center" class="form">
                    <form action="/unsubscribe" method="post">
                        <div class="input_txtbx_div">
                            <input type="email" id="email" name="email" class="input_txtbx" placeholder="Email">
                        </div>
                        <div class="input_txtbx_div">
                            <input type="submit" class="btn">
                        </div>    
                    </form>
                </div>
            </div>


            <div class="pop_up_div" id="popUpDiv">
                <div class="pop_up">
                    <div class="pop_up_top">
                        <label for="" id="close">X</label>
                    </div>
                    <div class="pop_up_bottom">
                        <div>
                            <%= info.message %>
                        </div>
                        <div>
                            <a href="/"><input type="button" class="btn" value="Go to homepage"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    email = document.getElementById("email").value
    if("<%= info.message%>" != ""){
        document.getElementById("popUpDiv").style.display = "grid"
    }

    var closee = document.getElementById("close")
    closee.addEventListener("click", ()=>{
        document.getElementById("popUpDiv").style.display = "none"
    })
</script>