<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Not Seeing Your Lost Item</title>
    <link rel="stylesheet" href="/get_update_page/notSeeing.css">
</head>
<body>
    <div class="overall-container">
        <%- include('./partials/nav_bar.ejs') %>
        <%- include('./partials/mobile_nav_bar.ejs') %>

    <div class="back">
            <label class="back-arrow back-to-home" for="back">&#60;</label><a href="/lost-items" id="back" class="back-to-home">Back to home</a>
        </div>


        <div class="container">
            <form action="/get-update" method="post">
                <h1 id="heading">NOT SEEING YOUR LOST ITEM?</h1>
                <div class="input-container">
                    <div class="overall-form-div">
                        <div class="field">
                            <input type="text" name="firstname" placeholder="FirstName" id="firstName">
                            <input type="text" name="student_email" placeholder="Student Email" id="studentEmail">
                            <input type="text" name="item_category" placeholder="Item Category" id ="itemCategory">
                            <input type="text" name="item_name" placeholder="Name of item" id="itemName">
                            <p class="info" id="error_p"> </p>
                        </div>
                        
                        <textarea  id="" cols="30" rows="10" placeholder="Descriptions" name="description" class="descriptions"></textarea>
                    </div>

                    <div class="pic">
                        <img src="get_update_page/images/Crazy wallpaper.jpg" alt="" class="hidden-mobile">
                    </div>
                </div>

                <div class="btn-div">
                    <!-- <button data-modal-target class="btn">Submit</button>      -->
                    <input class="btn" type="button" id="get-btn" value="Submit" onclick="checkIfEmpty()">   
                </div>
            </form>

        </div>
        <div class="modal" id="modal">
            <div class="modal-header">
                <button data-close-button class="close-button">&times;</button>
            </div>
            <!-- <div class="modal-body"></div> -->
        
            <div class="modal-body">
            <p>Thanks for your response</p>
            <p> You'd be notified of any updates in your category!</p>
            <div class="btn-div">
                    <a href="/lost-items"><input type="button" class="btn"  value="Back to home"></a>
            </div>
            </div>
        </div>
        <div id="overlay"></div>

        <div class="circle1"></div>
        <div class="circle2"></div>
        <div class="circle3"></div>
        <div class="circle4"></div>
        <% if ( info.popup === "show") { %>
            <script src="/get_update_page/script.js"></script>
        <% } %>
    </div>
</body>
</html> 


<script>
    checkIfEmpty = () =>{
        var errorP = document.getElementById("error_p")
        var firstName = document.getElementById('firstName').value
        var studentEmail = document.getElementById('studentEmail').value
        var itemCategory = document.getElementById('itemCategory').value
        var itemName = document.getElementById('itemName').value
      
        var submitButton = document.getElementById('get-btn')

            if(firstName == "" || studentEmail == "" || itemCategory == "" || itemName == ""){
                errorP.innerHTML = "Enter values to empty fields"
                errorP.style.display = "block"
                submitButton.blur()
            }
            else{
                submitButton.type = "submit"
            }
    }
</script>